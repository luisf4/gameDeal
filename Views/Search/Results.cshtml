@model List<DealSearch>

<!DOCTYPE html>
<html>
<head>
    <title>CheapShark Game Deals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Bootstrap CSS from a CDN or your local installation -->
    <style>
        /* Custom styles, if needed */
        .imgSearch {
            max-width: 100px; /* Set the maximum width for the game logo image */
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <h1 class="mb-4">CheapShark Game Deals</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Title</th>
                <th>Cheapest</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deal in Model) {
                <tr>
                    <td><img class="imgSearch" src="@deal.thumb" alt="Game Logo"></td>
                    <td>@deal.external</td>
                    <td>@deal.cheapest</td>
                </tr>
            }
        </tbody>
    </table>
</div>

</body>
</html>
